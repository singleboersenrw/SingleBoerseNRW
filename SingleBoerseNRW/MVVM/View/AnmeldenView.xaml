<UserControl x:Class="SingleBoerseNRW.MVVM.View.AnmeldenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SingleBoerseNRW.MVVM.View"
             mc:Ignorable="d" d:DesignWidth="800" Height="492">
    <StackPanel>
        <Grid Width="244">
            <Grid VerticalAlignment="Top">
                <TextBox Text="Benutzername" TextWrapping="Wrap" Margin="0,50,1,0" Height="18" VerticalAlignment="Top"/>
            </Grid>
            <TextBox Text="Passwort" TextWrapping="Wrap" Margin="-1,131,0,0" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="243"/>
        </Grid>
        <Grid/>
        <Grid>
            <Button Content="Anmelden" Foreground="White"
                FontSize="14" Background="DarkCyan" RenderTransformOrigin="0.501,1.048" Margin="50,50,60,50" >
                <Button.Resources>

                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </StackPanel>

</UserControl>


